<%- model_class = Motion -%>
<div class="well">
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:lock_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @motions.each do |motion| %>
      <tr>
        <td><%= link_to motion.id, motion_path(motion) %></td>
        <td><%= motion.lock_id %></td>
        <td><%=l motion.created_at %></td>
        <td>
         
                      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lock_path(motion), :class => 'btn btn-info btn-xs', :style=>'float:left;margin:0px' %>
                      <%= button_to "delete", motion, :method=>:delete, :class=>'btn btn-danger btn-xs' ,:style=>'margin:0px 10px' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_motion_path,
            :class => 'btn btn-primary' %>
</div>
