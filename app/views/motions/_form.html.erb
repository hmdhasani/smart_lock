<%= form_for @motion, :html => { :class => "form-horizontal motion" } do |f| %>

    <% if @motion.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@motion.errors.count, "error") %> prohibited this motion from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @motion.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :lock_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lock_id, :class => 'form-control' %>
    </div>
    <%= error_span(@motion[:lock_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            motions_path, :class => 'btn btn-default' %>

<% end %>
