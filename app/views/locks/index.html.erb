<%- model_class = Lock -%>
<div class="well">

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:serial) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @locks.each do |lock| %>
      <tr>
        <td><%= lock.serial %></td>
        <td><%= lock.name %></td>
        <td><%=l lock.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lock_path(lock), :class => 'btn btn-info btn-xs', :style=>'float:left;margin:0px' %>
                      <%= button_to "delete", lock, :method=>:delete, :class=>'btn btn-danger btn-xs' ,:style=>'margin:0px 10px' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lock_path,
            :class => 'btn btn-primary' %>
</div>  